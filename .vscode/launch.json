{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug Express Dev",
      "type": "node",
      "request": "launch",
      "program": "${workspaceFolder}/main.js",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "envFile": "${workspaceFolder}/.env",
      "skipFiles": ["<node_internals>/**"],
      "env": {
        "NODE_ENV": "development",
        "PORT": "3000"
      }
    }
  ]
}